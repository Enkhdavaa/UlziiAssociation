---
import '../styles/style.css'
import './header.css'
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ulzii Association</title>
    <link rel="icon" href="/ulzii.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Kanit:wght@300&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <script>
    const primaryNav = document.querySelector('.primary-navigation')!; 
    const navToggle = document.querySelector('.mobile-nav-toggle')!;
    navToggle.addEventListener('click', () => {
        const visible = primaryNav.getAttribute('data-visible') === 'true';
        primaryNav.setAttribute('data-visible', visible ? 'false' : 'true');
        navToggle.setAttribute('aria-expanded', visible ? 'false' : 'true');
    });
  </script>
  <body>
    <div class="container">
      <header class="primary-header flex">
        <div>
            <img class="logo" src="/ulzii.png" />
        </div>
        <button 
          area-controls="primary-navigation" 
          aria-expanded="false" 
          class="mobile-nav-toggle">
            <span class="sr-only">Menu</span>
        </button>
        <nav>
            <ul
              id="primary-navigation"
              data-visible="false"
              class="primary-navigation flex">
                <li><a href="/">Home</a></li>
                <li><a href="/news">News</a></li>
                <li><a href="/event">Event</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </nav>
      </header>

      <slot></slot>

      <div class="main-page"></div>
      <footer class="footer"> Copyright 2025 </footer>
    </div>
  </body>
</html>
